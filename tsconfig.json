{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "lib": [
      "ES2024",
      "DOM"
    ],
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
